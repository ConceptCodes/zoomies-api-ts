NODE_ENV="local"

APP_PORT="8000"

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/postgres"

DEFAULT_APPOINTMENT_DURATION="30"
JWT_SECRET="<SAMPLE_SECRET>"
JWT_REFRESH_SECRET="<SAMPLE_SECRET>"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="1d"

# Email Service
RESEND_API_KEY="resend_api_key"

# SMS Service (Optional)
TWILIO_ACCOUNT_SID="twilio_account_sid"
TWILIO_AUTH_TOKEN="twilio_auth_token"
TWILIO_FROM_NUMBER="+1234567890"
TWILIO_DEFAULT_COUNTRY_CODE="+1"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_TOKEN="redis_token"
REDIS_EXPIRES_IN_MINS="5"

# Notification Configuration
NOTIFICATION_QUEUE_KEY="zoomies:notifications"
NOTIFICATION_SCHEDULED_QUEUE_KEY="zoomies:notifications:scheduled"
NOTIFICATION_WORKER_POLL_INTERVAL_MS="1000"
NOTIFICATION_SCHEDULED_BATCH_SIZE="50"
APPOINTMENT_REMINDER_LEAD_MINUTES="60"

# Polar Payment Integration (Optional)
POLAR_API_KEY="polar_api_key"
POLAR_WEBHOOK_SECRET="polar_webhook_secret"
POLAR_SUCCESS_URL="https://yourapp.com/payment/success"
POLAR_CANCEL_URL="https://yourapp.com/payment/cancel"
